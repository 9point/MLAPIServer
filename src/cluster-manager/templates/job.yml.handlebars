apiVersion: batch/v1
kind: Job
metadata:
  name: {{id}}
spec:
  template:
    spec:
      containers:
        - name: {{projectName}}
          image: {{imageName}}
          command: {{command}}
          env:
            {{#each env}}
            - name {{name}}
              value: {{value}}
            {{/each}}
            - name: AWS_ACCESS_KEY_ID
              valueFrom:
                secretKeyRef:
                  name: secrets.primary
                  key: AWS_ACCESS_KEY_ID
            - name: AWS_SECRET_ACCESS_KEY
              valueFrom:
                secretKeyRef:
                  name: secrets.primary
                  key: AWS_SECRET_ACCESS_KEY
            - name: SPACES_BUCKET
              valueFrom:
                configMapKeyRef:
                  name: configs.primary
                  key: SPACES_BUCKET
            - name: SPACES_REGION
              valueFrom:
                configMapKeyRef:
                  name: configs.primary
                  key: SPACES_REGION
      restartPolicy: Never
  backoffLimit: 1
